<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallePokemon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CAAEFD"
        android:orientation="vertical"
        android:padding="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:layout_marginTop="90dp"
            android:padding="10dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="270dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/textView83"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Height"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView93"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView113"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Type"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/TextNamePik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pikachu"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgpika"
                android:layout_width="170dp"

                android:layout_height="170dp"

                android:layout_marginLeft="90dp"
                android:layout_marginTop="70dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/images" />

            <LinearLayout
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="300dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/Height"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Weight"
                    android:layout_width="10sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Type"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="electric"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="360dp"
                tools:context=".DetallePokemon">


                <TextView
                    android:id="@+id/HP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HP: 0"
                    android:textSize="20sp"
                    android:layout_marginLeft="50dp"
                    android:paddingBottom="10dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/Ataque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ataque: 0"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/Defensa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Defensa: 0"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/AtaqueEspecial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ataque Especial: 0"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/DefensaEspecial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Defensa Especial: 0"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:textStyle="bold"
                    />


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/png_clipart_pokeball_pokeball_thumbnail_removebg_preview" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>